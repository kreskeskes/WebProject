@model List<ProductResponse>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="grid-container-element">
        <div class="grid-child-element">
            <h1>Product Details</h1>
        </div>
        <div class="grid-child-element">
            <a asp-controller="products" class="btn btn-green" asp-action="addproduct">Add new product</a>
        </div>
    </div>
    <div class="box-container">
        @foreach (ProductResponse product in Model)
        {
            <div class="card-container">
                <div class="card">
                    <div class="img">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/3f/Placeholder_view_vector.svg/1022px-Placeholder_view_vector.svg.png?20220519031949" style="width:100%; height:200px;" alt="">
                    </div>
                    <h1>@product.Name</h1>
                    <div class="price">
                        <div class="size-picker">
                            <p>Choose Size</p>
                            <div class="size">
                                @foreach (var size in product.Sizes)
                                {
                                    <span>@size</span>
                                }
                            </div>
                        </div>
                        <div class="price-box">
                            <p class="normal">@product.Price</p>
                        </div>
                    </div>
                    <div class="action">
                        <button>Buy Now</button>
                        <button>Add to Wishlist</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
